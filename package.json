{
  "name": "cardano-escrow",
  "version": "0.1.0",
  "description": "Cardano Freelance Escrow - Secure payments on blockchain",
  "private": true,
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:client": "cd client && npm run dev",
    "install:all": "cd backend && npm install && cd ../client && npm install",
    "vercel:deploy:client": "cd client && vercel --prod",
    "vercel:deploy:backend": "cd backend && vercel --prod",
    "build:contracts": "node scripts/build-contracts.js",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
    "cardano",
    "escrow",
    "blockchain",
    "freelance"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0"
  }
}
